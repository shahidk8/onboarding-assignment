<!DOCTYPE html>
<html>
<head>
  <title>RapidShare</title>
  <%# <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag %>
  <%= csrf_meta_tag %>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<!-- Option 1: Include in HTML -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
  <%= javascript_include_tag 'https://code.jquery.com/jquery-3.6.0.min.js' %>
    <%= javascript_importmap_tags %>
</head>
<body>
  <%= render 'shared/header', locals: {user: @user, current_user: @current_user}%>
  <% if flash.now[:notice] %>
    <div id="notice" style="background-color:red"><%= flash[:notice] %></div>
    <script type="text/javascript">
      var notice = document.getElementById("notice");
      notice.style.opacity=1;
      var interval = setInterval(function(){
        notice.style.opacity-=0.01;
      },100);
      setTimeout(function(){
        clearInterval(interval);
        notice.remove();
      },5000);
    </script>
    <%flash[:notice]=nil%>
  <% end %>
  <div class="nav">
    <% if current_user %>
      <ul>
        <li><%= link_to 'View Shared Documents', shared_view_url,locals: { documents: @documents } %></li>
        <li><%= link_to "Add Document", new_document_path %></li>
      </ul>

    <% end %>
  </div>
<%= yield %>

</body>
</html>
